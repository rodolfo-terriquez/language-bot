# Telegram Bot
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# OpenAI (for Whisper transcription)
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenRouter (for LLM)
# Get this from https://openrouter.ai/keys
OPENROUTER_API_KEY=

# OpenRouter Model
# Browse models at https://openrouter.ai/models
# Examples: x-ai/grok-3-fast, anthropic/claude-3.5-sonnet, openai/gpt-4o
OPENROUTER_MODEL_CHAT=x-ai/grok-3-fast
OPENROUTER_MODEL_INTENT=x-ai/grok-3-fast

# Upstash Redis (shared with other bots)
# Get these from https://console.upstash.com/ after creating a Redis database
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Redis Key Prefix (IMPORTANT: use unique prefix to avoid collisions)
# Use "lang:" for this bot
REDIS_KEY_PREFIX=lang:

# Upstash QStash (shared with other bots)
# Get these from https://console.upstash.com/qstash
QSTASH_TOKEN=
QSTASH_CURRENT_SIGNING_KEY=
QSTASH_NEXT_SIGNING_KEY=

# Base URL (your Vercel production URL for this bot)
BASE_URL=https://language-bot-xxx.vercel.app

# Access Control (optional)
# Comma-separated list of allowed Telegram usernames or user IDs
ALLOWED_USERS=

# User Timezone (for lesson scheduling)
# Use IANA timezone names: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
USER_TIMEZONE=America/Mexico_City

# Braintrust (optional, for LLM tracing/observability)
# Get this from https://braintrust.dev/
BRAINTRUST_API_KEY=
# Use a unique project name for this bot's traces
BRAINTRUST_PROJECT_NAME=Japanese Language Bot
