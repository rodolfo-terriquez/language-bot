  "grammar": [
    {
      "id": "g03_01",
      "pattern": "〜の (possessive)",
      "meaning": "Indicates possession or relationship",
      "formation": "[Owner] の [Object]",
      "examples": [
        {
          "japanese": "わたしのほん",
          "reading": "watashi no hon",
          "meaning": "my book"
        },
        {
          "japanese": "せんせいのかばん",
          "reading": "sensei no kaban",
          "meaning": "the teacher's bag"
        }
      ],
      "notes": "の (no) is like 's in English. It connects nouns to show possession or association.",
      "difficulty": 1
    },
    {
      "id": "g03_02",
      "pattern": "これ・それ・あれ (ko-so-a pattern)",
      "meaning": "This/That/That over there",
      "formation": "こ (near speaker) / そ (near listener) / あ (far from both)",
      "examples": [
        {
          "japanese": "これはわたしのです。",
          "reading": "Kore wa watashi no desu.",
          "meaning": "This is mine."
        },
        {
          "japanese": "あれはなんですか。",
          "reading": "Are wa nan desu ka.",
          "meaning": "What is that over there?"
        }
      ],
      "notes": "This pattern extends to other words: ここ/そこ/あそこ (here/there), この/その/あの (this/that + noun).",
      "difficulty": 2
    }
  ],
