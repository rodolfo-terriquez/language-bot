  "grammar": [
    {
      "id": "g04_01",
      "pattern": "を (object marker)",
      "meaning": "Marks the direct object of an action",
      "formation": "[Object] を [Verb]",
      "examples": [
        {
          "japanese": "ほんをよみます。",
          "reading": "Hon wo yomimasu.",
          "meaning": "I read a book."
        },
        {
          "japanese": "コーヒーをのみます。",
          "reading": "Koohii wo nomimasu.",
          "meaning": "I drink coffee."
        }
      ],
      "notes": "を (wo/o) marks what receives the action. It's pronounced 'o' but written 'wo'.",
      "difficulty": 1
    },
    {
      "id": "g04_02",
      "pattern": "に (destination/time marker)",
      "meaning": "Indicates destination, time, or indirect object",
      "formation": "[Place/Time] に [Verb]",
      "examples": [
        {
          "japanese": "にほんにいきます。",
          "reading": "Nihon ni ikimasu.",
          "meaning": "I go to Japan."
        },
        {
          "japanese": "ななじにおきます。",
          "reading": "Nana-ji ni okimasu.",
          "meaning": "I wake up at 7 o'clock."
        }
      ],
      "notes": "に has many uses! Today we focus on destination (going TO somewhere) and specific times.",
      "difficulty": 2
    },
    {
      "id": "g04_03",
      "pattern": "〜ます form (polite verbs)",
      "meaning": "Polite present/future tense",
      "formation": "Verb stem + ます",
      "examples": [
        {
          "japanese": "まいにちべんきょうします。",
          "reading": "Mainichi benkyou shimasu.",
          "meaning": "I study every day."
        },
        {
          "japanese": "あしたいきます。",
          "reading": "Ashita ikimasu.",
          "meaning": "I will go tomorrow."
        }
      ],
      "notes": "〜ます verbs are polite and safe to use in any situation. They can express both present habit and future intention.",
      "difficulty": 1
    }
