  "grammar": [
    {
      "id": "g18_01",
      "pattern": "な-Adj な Noun",
      "meaning": "Describing nouns with な-adjectives",
      "formation": "[な-adjective] + な + [Noun]",
      "examples": [
        {
          "japanese": "しずかなへやがすきです。",
          "reading": "Shizuka na heya ga suki desu.",
          "meaning": "I like quiet rooms."
        },
        {
          "japanese": "ゆうめいなレストランにいきました。",
          "reading": "Yuumei na resutoran ni ikimashita.",
          "meaning": "I went to a famous restaurant."
        }
      ],
      "notes": "な-adjectives need な before nouns. Without a noun, just use です.",
      "difficulty": 1
    },
    {
      "id": "g18_02",
      "pattern": "な-Adj (negative/past)",
      "meaning": "Conjugating な-adjectives",
      "formation": "[な-adj] + じゃないです / でした / じゃなかったです",
      "examples": [
        {
          "japanese": "ここはしずかじゃないです。",
          "reading": "Koko wa shizuka ja nai desu.",
          "meaning": "This place is not quiet."
        },
        {
          "japanese": "きのうはひまでした。",
          "reading": "Kinou wa hima deshita.",
          "meaning": "I was free yesterday."
        }
      ],
      "notes": "な-adjectives conjugate like nouns using です forms.",
      "difficulty": 2
    }
  ],
