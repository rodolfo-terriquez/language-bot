  "grammar": [
    {
      "id": "g28_01",
      "pattern": "[Noun] が できます",
      "meaning": "Can do ~ / Be able to ~",
      "formation": "[Skill/Language] が できます",
      "examples": [
        {
          "japanese": "ピアノができます。",
          "reading": "Piano ga dekimasu.",
          "meaning": "I can play piano."
        },
        {
          "japanese": "かんじがすこしできます。",
          "reading": "Kanji ga sukoshi dekimasu.",
          "meaning": "I can read a little kanji."
        }
      ],
      "notes": "Use できます for skills, languages, sports. The skill is marked with が.",
      "difficulty": 1
    },
    {
      "id": "g28_02",
      "pattern": "Verb た-form + ことがあります",
      "meaning": "Have (ever) done ~",
      "formation": "[Verb た-form] + ことがあります",
      "examples": [
        {
          "japanese": "ふじさんにのぼったことがあります。",
          "reading": "Fuji-san ni nobotta koto ga arimasu.",
          "meaning": "I have climbed Mt. Fuji before."
        },
        {
          "japanese": "すしをつくったことがありますか。",
          "reading": "Sushi wo tsukutta koto ga arimasu ka.",
          "meaning": "Have you ever made sushi?"
        }
      ],
      "notes": "This talks about life experience. Negative: ことがありません (have never done).",
      "difficulty": 2
    }
  ],
